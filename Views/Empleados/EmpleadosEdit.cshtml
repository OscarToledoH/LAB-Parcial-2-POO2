@{
    ViewData["Title"] = "Edicion de Empleados";

}
@model EmpleadosModel

<h1 class="text-center">Edicion de Empleado</h1>
<br><br>

<form  asp-controller="Empleados" asp-action="EmpleadosEdit" class="text-center">
    <input type="hidden" asp-for="Id">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label class="from-label " for="Nombre">Empleado</label><br>
        <input asp-for="Nombre" placeholder="Escriba el Nombre">
        
    </div>
    <div>
        <label for="Apellido">Apellido</label><br>
        <input asp-for="Apellido" placeholder="Escriba el Apellido">
             
    </div>
      <div>
        <label for="Edad">Edad</label><br>
        <input asp-for="Edad" placeholder="Escriba la Edad">
            
    </div>
     <div>
        <label for="Telefono">Telefono</label><br>
        <input asp-for="Telefono" placeholder="Escriba un Telefono">
      
    </div>
    <div>
        <label for="Email">Email</label><br>
        <input asp-for="Email" placeholder="Escriba un Correo">
          
    </div> 
     
    <br>
    <button class="btn btn-primary mb-3" >Guardar</button>
    <a class="btn btn-outline-secundary mb-3" asp-controller="Empleados" asp-action="Empleadoslist">Regresar</a>
</form>